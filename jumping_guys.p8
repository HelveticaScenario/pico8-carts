pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
colors = {1,5,7,9,12}
function _draw() 
	cls()
	local ttt = flr(t()*10) % 6
	for x=0,15 do
		for y=0,15 do
			spr(((ttt +x + y)%6)+1, x * 9, y * 9)
		end		
	end
	
	pal(0,colors[ttt%5])
	palt(0,false)
	palt(10,true)
	sspr(
		ttt * 8 + 8 + (8 * 6),
		0,
		8,
		8,
		0,
		0,
		128,
		128
	)
	pal()
	
	--color(9)
	--print(stat(7))
end
